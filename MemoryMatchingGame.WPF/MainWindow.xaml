<Window x:Class="MemoryMatchingGame.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MemoryMatchingGame.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:MemoryMatchingGame.WPF.Views"
        xmlns:vm="clr-namespace:MemoryMatchingGame.WPF.ViewModels"
        Title="MainWindow"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel,
                                         IsDesignTimeCreatable=True}"
        mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vm:MenuViewModel}">
                <v:MenuView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <v:SettingsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:GameViewModel}">
                <v:GameView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
